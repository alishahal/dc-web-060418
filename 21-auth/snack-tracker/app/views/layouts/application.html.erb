<!DOCTYPE html>
<html>
  <head>
    <title>SnackTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <% if current_user %>
          <h1>Welcome <%= current_user %></h1>
          <%= link_to "Logout", logout_path, method: "DELETE", class: "right-justify" %>
      <% else %>
      <%= link_to "Login", login_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
